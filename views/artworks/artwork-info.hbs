<div class="bg-navbar"></div>
<div class="artwork-info container">
    <div class="artworkDesc">
        <img src="{{primaryImageSmall}}" class="infoImg" alt="{{title}}">
        <div class="side-text">
            <h1>{{title}}</h1>
            <h4>{{objectDate}}</h4>
            <p><span>Dimensions:</span> {{dimensions}}</p>
            <p><span>Name:</span> {{objectName}}</p>
            <p><span>Period:</span> {{period}}</p>

            <form action="/artwork/{{objectID}}/favorite" method="post">
                <button type="submit" class="btn btn-primary">Add to favorite</button>
            </form>
        </div>

    </div>


    <form action="/artwork/{{objectID}}" method="POST">
        <label for="commentBox">AÃ±adir comentario:</label><br>
        <textarea name="text" id="commentBox" cols="30" rows="10" placeholder="Add new commentary"></textarea>
        <br>
        <label for="ratingSelect">Let a rating</label>
        <input type="number" name="rating" min="1" max="5">
        <br>
        <button type="submit">Submit</button>
    </form>

    <br>
    {{#if objectID}}
    {{#each comments}}
    <hr>
    <p>{{user.username}}</p>
    <p>{{date}}</p>
    <p>{{rating}}</p>
    <p>{{text}}</p>
    <hr>
    {{/each}}
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/APIHandler.js"></script>